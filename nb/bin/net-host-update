use Socket;

sub load_file {
	my $filename = shift;
	my @file;

	open FH, "$filename" || die $!;
	while(<FH>) {
		chomp;
		push @file, $_;
	}
  close FH || die $!;

  return @file;
}

sub update_host {
	my $host = shift;

	print "Looking up $host\n";
	@addrs = gethostbyname $host;
	@addrs = map { inet_ntoa($_) } @addrs[4 .. $#addrs];

	print "addrs = @addrs\n";
}

my @hosts = load_file("/etc/hosts");

$h = shift;

update_host $h;


# aliases and one-time runs here

